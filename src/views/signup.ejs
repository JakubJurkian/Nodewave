<%- include('./includes/head.ejs') %>
<body>
  <%- include('./includes/header.ejs') %>
  <div
    class="flex-column text-white bg-blue w-11/12 sm:w-[584px] mx-auto my-8 p-6 rounded-md box-shadow"
  >
    <form action="/signup" method="POST">
      <div class="flex flex-col gap-3">
        <input
          class="form-input"
          placeholder="Username"
          type="text"
          name="username"
          id="username"
        />
        <input
          class="form-input"
          placeholder="E-mail"
          type="email"
          name="email"
          id="email"
        />
        <input
          class="form-input"
          placeholder="&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;"
          type="password"
          name="password"
          id="password"
        />
        <input
          class="form-input"
          placeholder="&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;"
          type="password"
          name="confirm-password"
          id="confirm-password"
        />
        <button class="px-4 py-2 bg-white text-blue rounded-md" type="submit">
          Signup
        </button>
        <p class="self-center">Already have an account? <a class="underline font-bold" href="/login">Login</a></p>
      </div>
    </form>
  </div>
</body>
</html>
