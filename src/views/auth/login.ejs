<%- include('../includes/head.ejs') %>
</head>

<body>
  <%- include('../includes/header.ejs') %>
  <div class="flex-column text-white bg-blue w-11/12 sm:w-[584px] mx-auto my-8 p-6 rounded-md box-shadow">
    <form action="/login" method="POST">
      <div class="flex flex-col gap-3">
        <input class="form-input" placeholder="E-mail" type="email" name="email" id="email" value="<% if (error) { %><%= email %><% } %>" required>
        <input class="form-input" placeholder="&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;" type="password" name="password" id="password" required>
        <% if(error) { %>
        <div class="text-center border-2 bg-red-500 p-4 rounded-sm w-2/3 m-auto">
          <p><%= error.msg %></p>
        </div>
        <% } %>
        <a href="/reset-password-request" class="underline font-bold self-center">Forgot Password?</a>
        <button class="px-4 py-2 bg-white text-blue rounded-md transition-all duration-300 hover:bg-cyan-300 hover:text-white" type="submit">Login</button>
        <a class="self-center underline font-bold" href="/signup">Create a new account</a>
      </div>
    </form>
  </div>
</body>

</html>