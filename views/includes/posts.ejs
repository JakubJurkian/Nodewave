<% if (posts.length > 0) { %>
<section class="flex flex-col items-center">
  <% posts.forEach(post => { %>
  <article class="block my-8 w-11/12 sm:w-[584px] mx-auto">
    <a href="/post/<%= post._id %>">
      <div
        class="bg-[#fdfdfd] p-6 rounded-md box-shadow hover:bg-[#ffffff] transition-all duration-300"
      >
        <header class="flex gap-1 items-center">
          <div class="rounded-lg border-2 overflow-hidden w-14 h-14">
            <img
              src="/<%= post.avatar %>"
              class="bg-cover w-full h-full"
              alt="avatar"
            />
          </div>
          <div>
            <h2 class="text-2xl"><%= post.user %></h2>
          </div>
        </header>
        <div class="my-4 p-4 rounded-md bg-slate-100">
          <p><%= post.content %></p>
        </div>
        <footer>
          <p>Published: <%= post.formattedDate %></p>
        </footer>
      </div>
    </a>
  </article>
  <% }) %>
</section>
<% } else { %>
<section class="text-center mt-4">
  <p>There are no posts yet :(</p>
</section>
<% } %>
